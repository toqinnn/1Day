<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/arka">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout

        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="154dp"
            android:layout_height="103dp"
            android:layout_marginStart="150dp"
            android:translationX="-300dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/logo" />

        <LinearLayout
            android:id="@+id/lmbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_marginTop="80dp"
            android:gravity="center|center_horizontal"

            android:translationX="380dp">

            <Button
                android:id="@+id/mbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/group"
                android:clickable="false"
                android:gravity="center|fill_vertical"
                android:text="@string/daily"
                android:textColor="#000000"
                android:textColorHighlight="#00D6B7B7"
                android:textSize="18sp"
                android:translationX="10dp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lmbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-10dp"
            android:layout_marginStart="15dp"
            android:translationX="-420dp"

            >

            <Button
                android:id="@+id/mbtn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/group2"
                android:clickable="false"
                android:text="@string/settings"
                android:textSize="18sp"
                android:visibility="visible" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lmbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:layout_marginEnd="-10dp"
            android:gravity="center|center_horizontal"
            android:translationX="380dp"
            >

            <Button
                android:id="@+id/mbtn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/group1"
                android:clickable="false"
                android:text="@string/about"
                android:textSize="18sp"
                android:visibility="visible" />

        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:layout_gravity="center"
            android:id="@+id/ad_anasayfa"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">

        </com.google.android.gms.ads.AdView>



    </LinearLayout>
    </RelativeLayout>


</LinearLayout>